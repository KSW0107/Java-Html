<?xml version="1.0" encoding="UTF-8" ?> <!-- DAO와 같은 역할 -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.notice.mapper.NoticeMapper"> <!-- mapper = 인터페이스 파일 부분 -->
	<select id="getEmp" parameterType="int" resultType="employee">
		select * from
		employees where employee_id = #{empId}
	</select>
	<select id="empList" resultType="employee">
		select * from employees order by
		employee_id
	</select>
	<delete id="delEmp" parameterType="int">
		delete from employees where
		employee_id= #{empId}
	</delete>
	<insert id="addEmp" parameterType="employee">
		insert into employees
		(employee_id,last_name,email,job_id,hire_date)
		values(#{employeeId},#{lastName},#{email},#{jobId},sysdate)
	</insert>


	<!-- 공지사항관련 -->
	<select id="noticeList" resultType="notice"> <!-- id=자바파일 메소드이름, result =반환타입(별칭 지정해놓음(batis에서)) -->
		select * from tbl_notice order by 1 desc <!-- 실행되는 쿼리문 -->
	</select>
	<insert id="insertNotice" parameterType="notice"> <!-- paramter = 매개변수 타입  -->
		INSERT INTO tbl_notice
		(notice_id, notice_writer, notice_title,notice_subject)
		VALUES
		(notice_seq.nextval,#{noticeWriter}, #{noticeTitle}, #{noticeSubject}) <!-- #{} = 변수 -->
	</insert>
	<update id="updateNotice" parameterType="notice">
		update tbl_notice
		set notice_title=#{noticeTitle}, notice_subject=#{noticeSubject}
		where notice_id=#{noticeId}
	</update>
	<delete id="deleteNotice" parameterType="int">
		delete from tbl_notice where notice_id=#{noticeId}
	</delete>
	<select id="searchNotice" resultType="notice" parameterType="int">
		select * from tbl_notice where notice_id=#{noticeId}
	</select>
</mapper>